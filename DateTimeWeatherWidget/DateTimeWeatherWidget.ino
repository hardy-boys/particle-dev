void setup()
{
	// Request time synchronization from the Particle Device Cloud
	Particle.syncTime();
	// Wait until Photon receives time from Particle Device Cloud (or connection to Particle Device Cloud is lost)
	waitUntil(Particle.syncTimeDone);

	tft.begin();
  tft.setRotation(1);
	titleText();
	weatherIcon();
}

void loop(void) {
	format_string = "%I:%M %p";

	Time.zone(-5);
	if (Time.isDST())
	{
		Time.beginDST();
	}
	else
	{
		Time.endDST();
	}
	current_time = Time.format(Time.now(), format_string);
	uptime = millis() / ms;

	// render screen elements
	titleText();
	weatherIcon();
	tft.setFont(CALIBRI_18);
	tft.setTextSize(1);
	tft.setTextColor(ILI9341_BLACK);
	tft.setCursor(124, 72);
	tft.println("Clock Time: " + current_time);
	tft.setCursor(124, 90);
	tft.println("Uptime: " + String(uptime) + "s");
	tft.println("");

	delay(1000);

}

void titleText()
{
	tft.fillScreen(ILI9341_WHITE);
  tft.setCursor(80, 0);
  tft.setTextColor(ILI9341_BLACK);
  tft.setTextSize(1);
	tft.setFont(CALIBRI_24);
	tft.println("Time & Weather");
}

void weatherIcon(void)
{
	tft.drawBitmap(12, 72, weather, 96, 96, ILI9341_YELLOW);
}

